<UserControl x:Class="FenetreParamétrage.UCAffichage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FenetreParamétrage"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <!-- Ajout d'une groupBox -->
    <GroupBox Header="GroupBox2" Margin="5" BorderBrush="Blue">
        <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Top">
            <!-- Application des radiobuttons -->
            <RadioButton Content="opt1" Margin="5"/>
            <RadioButton Content="opt2" IsChecked="True" Margin="5"/>
            <RadioButton Content="opt3" Margin="5"/>
        </StackPanel>  
    </GroupBox>
</UserControl>
