<Application x:Class="FenetreParamétrage.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FenetreParamétrage"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Style des boutons -->
            <Style TargetType="ComboBox">
                <Setter Property="Foreground" Value="Gray"/>
            </Style>
            <Style x:Key="StyleComboBox" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                <Setter Property="Foreground" Value="Black"/>
            </Style>
            <!-- Style des bandeaux -->
            <Style x:Key="styleTitre">
                <Setter Property="Label.Background" Value="LightGray"/>
                <Setter Property="Label.FontWeight" Value="Bold"/>
                <Setter Property="Label.Margin" Value="-5,5"/>
                <Setter Property="Label.VerticalContentAlignment" Value="Center"/>
                <Setter Property="Label.Foreground" Value="Gray"/>
            </Style>
            <!-- Ajout du dictionnaire Images à celui de l'application -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="DicoImages.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
